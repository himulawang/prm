h2.text-info Create Log Gazer
div
    .row.input-prepend
        span.span2.add-on Id
        input#ConnectionMgr-Id.span4(
            type="text"
            value='#{id}'
            disabled
        )
    .row.input-prepend
        span.span2.add-on Name
        input#ConnectionMgr-Name.span4(type="text")
    .row.input-prepend
        span.span2.add-on Path
        input#ConnectionMgr-Path.span4(type="text")
.row
    .span1.offset3
        input.btn.btn-large(
            type='button'
            value='OK'
            onclick='connectionMgrView.onCreateLog();'
        )
    .span1
        input.btn.btn-large(type='button', value='Cancel', onclick='connectionMgrView.clearContent();')
