h2.text-info Create Redis Connection
div
    .row.input-prepend
        span.span2.add-on Id
        input#ConnectionMgr-Id.span4(
            type="text"
            value='#{id}'
            disabled
        )
    .row.input-prepend
        span.span2.add-on Name
        input#ConnectionMgr-Name.span4(type="text")
    .row.input-prepend
        span.span2.add-on Host
        input#ConnectionMgr-Host.span4(type="text")
    .row.input-prepend
        span.span2.add-on Port
        input#ConnectionMgr-Port.span4(type="text")
    .row.input-prepend
        span.span2.add-on Password
        input#ConnectionMgr-Password.span4(type="password")
    .row.input-prepend
        span.span2.add-on KeepAlive
        .span3
            input#ConnectionMgr-KeepAlive(type="checkbox", checked='checked')
.row
    .span1.offset3
        input.btn.btn-large(
            type='button'
            value='OK'
            onclick='connectionMgrView.onCreateConnection();'
        )
    .span1
        input.btn.btn-large(type='button', value='Cancel', onclick='connectionMgrView.clearContent();')
